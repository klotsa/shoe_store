<div class="container">
  <button type="button" name="button"><a href="/">Home</a></button>
  <button type="button" name="button"><a href="/stores">Edit List of Stores</a></button>
  <button type="button" name="button"><a href="/brands">View all Brands</a></button>

  <h3>Store Name: <%= @store.name() %></h3>

  <h5>Shoe brands:
  <% if @store.brands().any?() %>
      <ul>
        <% @store.brands().each do |brand| %>
          <li><%= brand.name() %></a></li>
        <% end %>
      </ul>
  <% else %>
      <h4>The store is empty - add a new brand</h4>
  <% end %>

  <h3>Add a Brand</h3>
  <form action="/stores/<%= @store.id %>/add_brand" method="post">
    <div class="form-group">
      <label for="name">Name: </label>
      <input id="name" name="name" type="text"  class="form-control">
    </div>
    <div class="form-group">
      <label for="price">Price: </label>
      <input id="price" name="price" type="text"  class="form-control">
    </div>
    <button type="submit" class="btn btn">Save</button>
  </form>


  <div id="edit_name">
    <form action="/stores/<%= @store.id() %>/edit" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="name"><h3>Enter a new name:</h3> </label>
        <input id="name" name="name" type="text"  class="form-control">
      </div>
      <button type="submit" class="btn">Update</button>
    </form>
    <br><br>

    <h3>Delete Store</h3>
    <form action="/stores/<%= @store.id() %>/delete" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn">Delete</button>
    </form>
  </div>
</div>
